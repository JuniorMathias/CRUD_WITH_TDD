<div class="mx-auto max-w-screen-xl rounded px-10 pt-6 pb-8 mb-4 shadow-md rounded-lg bg-blue-100 border rounded">

  <div class="flex justify-center my-8">
    <h1 class="mb-4 text-3xl font-extrabold md:text-5xl lg:text-4xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 text-center"> Customer List </h1>
  </div>

  <% if flash[:notice] %>
    <div class="text-center py-4 bg-green-100 border-green-400 border-l-4">
      <p class="text-green-700"><%= flash[:notice] %></p>
    </div>
  <% end %>

  <div class="rounded px-10 pt-6 pb-8 mb-4">
    <table class="w-full sm:w-auto text-sm text-left uppercase dark:text-gray-800 text-gray-700">

      <thead class="text-xs text-gray-700">
        <tr>
          <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800">Name</th>
          <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800"></th>
          <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800"></th>
          <th scope="col" class="px-6 py-3 bg-gray-50 dark:bg-gray-800"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr class="border-b border-t border-gray-500 dark:border-gray-700">
            <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800"><%= customer.name %></td>
            <td class="px-6 py-4 font-medium bg-gray-50 dark:bg-gray-800"><%= link_to "Show", customer_path(customer) %></td>
            <td class="px-6 py-4 font-medium bg-gray-50 dark:bg-gray-800"><%= link_to "Edit", edit_customer_path(customer) %></td>
            <td class="px-6 py-4 font-medium bg-gray-50 dark:bg-gray-800"><%= link_to "Delete", customer, method: :delete, data: { confirm: 'Do you really want delete it?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex justify-center my-8">
    <%= link_to 'New Customer', new_customer_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

</div>
