<div class="mx-auto max-w-screen-xl rounded px-10 pt-6 pb-8 mb-4 shadow-md rounded-lg bg-blue-100 border rounded">

  <div class=" bg-blue-100 border rounded ">

    <div class="flex justify-center my-8">
      <h1 class="mb-4 text-3xl font-extrabold md:text-5xl lg:text-4xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 text-center"> Listing Customers </h1>
    </div>

    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    
    <div class="mb-4">
      <p class="block text-gray-700 font-bold mb-2"><strong>Name:</strong> <%= @customer.name %></p>
    </div>

    <div class="mb-4">
      <p class="block text-gray-700 font-bold mb-2"><strong>Email:</strong> <%= @customer.email %></p>
    </div>

    <div class="mb-4">
      <p class="block text-gray-700 font-bold mb-2"><strong>Phone:</strong> <%= @customer.phone %></p>
    </div>

    <div class="mb-4">
      <p class="block text-gray-700 font-bold mb-2"><strong>Smoker:</strong> <%= @customer.smoker %></p>
    </div>

  </div>

</div>