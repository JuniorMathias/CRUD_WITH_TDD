<div class="flex justify-center items-center w-screen">
  <div class=" bg-blue-100 border rounded ">
    <h1 class="mb-4 text-3xl font-extrabold md:text-5xl lg:text-4xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 text-center"> Edit Customer </h1>

      <% if @customer.errors.any? %>
        <ul class="text-red-500 text-center">
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_for @customer, html: { class: "rounded px-10 pt-6 pb-8 mb-4" } do |f| %>
          <div class="flex items-center">
            <%= f.label :name, class: "block text-gray-700 text-sm font-bold mr-2" %>
            <p class="text-red-500"> *</p>
          </div>
          <%= f.text_field :name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

          <div class="flex items-center">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mr-2 mt-2 mb-2" %>
            <p class="text-red-500"> * </p>
          </div>
          <%= f.text_field :email, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

          <div class="flex items-center">
          <%= f.label :phone, class: "block text-gray-700 text-sm font-bold mr-2 mt-2 mb-2" %>
            <p class="text-red-500"> * </p>
          </div>
          <%= f.text_field :phone, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

          <%= f.label :avatar, class: "block text-gray-700 text-sm font-bold mr-2 mt-2 mb-2" %>
          <%= f.file_field :avatar, class:"shadow appearance-none border rounded w-full py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

          <%= f.label :smoker, class: "block text-gray-700 text-sm font-bold  mt-4" %><br>
          <% {'S': 'Sim', 'N': 'Não' }.each do |key, value| %>
            <%= f.radio_button :smoker, key, class: "peer relative h-5 w-5 mb-2 cursor-pointer rounded-full border  transition-all  before:w-12 before:-translate-y-2/4 before:-translate-x-2/4 before:rounded-full before:bg-blue-gray-500 before:opacity-0 before:transition-opacity checked:border-gray-900 checked:before:bg-gray-900 hover:before:opacity-10" %> <%= value %> <br>
          <% end %>


          <div class="flex items-center justify-center">
            <%= f.submit 'Edit Customer', class:"bg-blue-500 mt-4 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"%>
          </div>
      <% end %>

      <p class="text-center text-gray-500 text-xs">
        &copy;2024 Júnior Mathias.
      </p>

  </div>
</div>







