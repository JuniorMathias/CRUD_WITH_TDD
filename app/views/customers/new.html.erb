<% if @customer.errors.any?%>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %> </li>
    <% end %>
  <ul>
<% end %>


<h1 class="bg-slate-5ss00"> New Customer </h1>

<div class="w-full max-w-xs">
  <%= form_for @customer, html: { class: "bg-red shadow-md rounded px-8 pt-6 pb-8 mb-4" } do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2 mt-2" %>
      <%= f.text_field :name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2 mt-2" %>
      <%= f.text_field :email, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.label :phone, class: "block text-gray-700 text-sm font-bold mb-2 mt-2" %>
      <%= f.text_field :phone, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.label :avatar, class: "block text-gray-700 text-sm font-bold mb-2 mt-2" %>
      <%= f.file_field :avatar, class:"shadow appearance-none border rounded w-full py-4 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

      <%= f.label :smoker %><br>
      <%{'S': 'Sim', 'N': 'Não' }.each do |key, value| %>
        <%= f.radio_button :smoker, key %> <%= value %> <br>
      <% end %>

      <div class="flex items-center justify-between">
        <%= f.submit 'Register Customer', class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
      </div>
    </div>
  <% end %>
  <p class="text-center text-gray-500 text-xs">
    &copy;2024 Júnior Mathias.
  </p>
</div>